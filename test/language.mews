  =^.x.^= wake(name)
    home.name = name
  meowmeow

  =^.x.^= introduction()
    bring "meow, i'm " .. home.name
  meowmeow
meowmeow

clowder Charlie is Cat
  =^.x.^= wake()
    outside("charlie")
  meowmeow
meowmeow

